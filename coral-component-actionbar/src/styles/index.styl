@require '../../../coral-theme-spectrum/src/styles/vars.css';

._coral-ActionBar {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;

  border-style: solid;
  border-width: var(--spectrum-medium-popover-border-size);
  border-radius: var(--spectrum-medium-popover-border-radius);
  box-sizing: border-box;

  height: var(--spectrum-medium-panel-header-height);
}

._coral-ActionBar-primary,
._coral-ActionBar-secondary {
  position absolute;
  // IE11
  top: 8px;

  > ._coral-ActionBar-item,
  > ._coral-ActionButton[coral-actionbar-more] {
    float: left;
    // required to get the focused item to go to the foreground
    position: relative;
    margin-left: var(--spectrum-medium-actionbuttongroup-button-gap-x);
  }

  > [coral-actionbar-offscreen] {
    // important to make Coral.commons.addResizeListener work with actionbar
    position: absolute !important;
    left: -999em;
  }
}

._coral-ActionBar-primary {
  left: var(--spectrum-medium-actionbuttongroup-button-gap-x);
}

._coral-ActionBar-secondary {
  right: calc(var(--spectrum-medium-actionbuttongroup-button-gap-x) * 2);
}

._coral-ActionBar-buttonList button[is="coral-buttonlist-item"],
._coral-ActionBar-anchorList a[is="coral-anchorlist-item"] {
  -webkit-font-smoothing: antialiased;
}

.coral--large {
  ._coral-ActionBar {
    height: var(--spectrum-large-panel-header-height);
  }
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';
