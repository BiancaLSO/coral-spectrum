//- provides markup to examples
mixin component-markup-taglist(options)
    - options = options || {};
    - options.label1 = options.label1 ? options.label1 : "Tag 1";
    - options.label2 = options.label2 ? options.label2 : "Tag 2";
    - options.label3 = options.label3 ? options.label3 : "Tag 3";
    - options.disabled = options.disabled ? " disabled='" + options.disabled + "'" : "";
    - options.readonly = options.readonly ? " readonly='" + options.readonly + "'" : "";
    - options.name = options.name ? " name='" + options.name + "'" : "";
    | <coral-taglist#{options.name}#{options.disabled}#{options.readonly}>
    |   <coral-tag>#{options.label1}</coral-tag>
    |   <coral-tag>#{options.label2}</coral-tag>
    |   <coral-tag>#{options.label3}</coral-tag>
    | </coral-taglist>
