$card-overlay-background-color = var(--spectrum-darkest-quickactions-background-color);

$card-context-inverted-color = var(--spectrum-darkest-card-description-text-color);
$card-title-inverted-color = var(--spectrum-lightest-banner-text-color);
$card-subtitle-inverted-color = var(--spectrum-darkest-card-description-text-color);
$card-property-inverted-color = var(--spectrum-dark-card-description-text-color)
$card-property-icon-inverted-color = var(--spectrum-dark-card-description-text-color);
$card-wrapper-inverted-background-color = var(--spectrum-darkest-quickactions-background-color);
$card-wrapper-inverted-border-color = var(--spectrum-darkest-card-border-color);

$card-context-condensed-color = var(--spectrum-lightest-card-description-text-color);
$card-title-condensed-color = var(--spectrum-lightest-display-2-text-color);
$card-subtitle-condensed-color = var(--spectrum-lightest-card-quiet-subtitle-text-color);
$card-property-condensed-color = var(--spectrum-lightest-card-quiet-title-text-color);
$card-property-icon-condensed-color = var(--spectrum-lightest-card-quiet-title-text-color);
$card-wrapper-condensed-background-color = var(--spectrum-lightest-quickactions-background-color)
$card-wrapper-condensed-border-color = var(--spectrum-lightest-card-border-color);

._coral-Card {
   border-color: $card-border-color;
   background-color: $card-background-color;
}

a[href] > ._coral-Card:not(._coral-Card--quiet):hover {
  border-color: $card-border-color-hover;
}

a[href] > ._coral-Card--quiet:hover coral-card-asset {
  background-color: $card-quiet-background-color-hover;
}

._coral-Card-wrapper {
  background-color: $card-background-color;
}

._coral-Card-title {
  color: $card-title-color;
}

coral-card-overlay {
  background-color: $card-overlay-background-color;

  ._coral-Card-property coral-card-property-content {
    color: $card-property-inverted-color;
  }
}

coral-card-asset {
  background-color: $card-border-color;
}

coral-card-description,
coral-card-propertylist {
  border-top-color: $card-property-border-color;
}

// used in case it needs to show a stack underneath
._coral-Card--stacked {
  &:before,
  &:after {
    background-color: $card-background-color;
    border-bottom-color: $card-border-color;
    border-left-color: $card-border-color;
    border-right-color: $card-border-color;
  }
}

// condensed modifier used to represent projects
._coral-Card--condensed {
  ._coral-Card-wrapper {
    background-color: $card-wrapper-condensed-background-color;
    border-bottom-color: $card-wrapper-condensed-border-color;
  }

  ._coral-Card-context {
    color: $card-context-condensed-color;
  }

  ._coral-Card-title {
    color: $card-title-condensed-color;
  }

  ._coral-Card-subtitle {
    color: $card-subtitle-condensed-color;
  }

  ._coral-Card-property {
    color: $card-property-condensed-color;
  }

  ._coral-Card-property-icon {
    color: $card-property-icon-condensed-color;
  }

  coral-card-description,
  coral-card-propertylist {
    border-top-color: $card-wrapper-inverted-border-color;
  }
}

._coral-Card--inverted {
  ._coral-Card-wrapper {
    background-color: $card-wrapper-inverted-background-color;
    border-bottom-color: $card-wrapper-inverted-border-color;
  }

  ._coral-Card-context {
    color: $card-context-inverted-color;
  }

  ._coral-Card-title {
    color: $card-title-inverted-color;
  }

  ._coral-Card-subtitle {
    color: $card-subtitle-inverted-color;
  }

  ._coral-Card-property {
    color: $card-property-inverted-color;
  }

  ._coral-Card-property-icon {
    color: $card-property-icon-inverted-color;
  }

  coral-card-description,
  coral-card-propertylist {
    border-top-color: $card-wrapper-condensed-border-color;
  }
}

._coral-Card--quiet {
  border-color: transparent;
  background-color: transparent;

  ._coral-Card-wrapper {
    border-color: transparent;
    background-color: transparent;
  }

  &._coral-Card--stacked:before,
  &._coral-Card--stacked:after {
    display: none;
  }
}
