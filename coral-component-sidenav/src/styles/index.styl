@require '@adobe/spectrum-css/dist/components/sidenav/index.css';
@require '@adobe/spectrum-css/dist/components/sidenav/index-diff.css';
@require '@adobe/spectrum-css/dist/components/sidenav/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/sidenav/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/sidenav/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/sidenav/multiStops/darkest.css';

@require '../../../coral-theme-spectrum/src/styles/vars.css';

coral-sidenav-level,
coral-sidenav-heading,
a[is="coral-sidenav-item"] {
  display: block;
}

a[is="coral-sidenav-item"] {
  text-decoration: none;
  outline: none;
}

// @spectrum support animation
._coral-SideNav._coral-SideNav--multiLevel {
  ._coral-SideNav {
    margin-top: -var(--spectrum-medium-sidenav-item-gap);
    margin-bottom: -var(--spectrum-medium-sidenav-item-gap);

    overflow-y: hidden;
    transition: height var(--spectrum-global-animation-duration-500) var(--spectrum-global-animation-ease-in-out),
                margin var(--spectrum-global-animation-duration-500) var(--spectrum-global-animation-ease-in-out);
  }

  // Remove bottom margin from last level
  ._coral-SideNav ._coral-SideNav {
    margin-bottom: 0;
  }
}




