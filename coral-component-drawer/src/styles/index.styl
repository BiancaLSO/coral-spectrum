._coral-Drawer {
  display: block;
  position: relative;
  // Override coral-Well padding
  padding: 0;
}

._coral-Drawer-toggle {
  position: absolute;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  width: 24px;
  height: 8px;
}

._coral-Drawer-toggleButton {
  width: 100%;
  height: 100%;
  padding: 0;
  min-width: 0;

  &:before,
  &:after  {
    content: '';
    height: 1px;
    position: absolute;
    top: 2px;
    left: 4px;
    right: 4px;
  }

  &:after {
    top: 4px;
  }
}

._coral-Drawer-content {
  padding: 16px;
}

._coral-Drawer-slider {
  overflow: hidden;
  transition: height ease 250ms;
}

._coral-Drawer--down {
  ._coral-Drawer-toggle {
    bottom: -9px;
  }

  ._coral-Drawer-toggleButton {
    border-top-left-radius: 0
    border-top-right-radius: 0;
  }
}

._coral-Drawer--up {
  ._coral-Drawer-toggle {
    top: -9px;
  }

  ._coral-Drawer-toggleButton {
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0;

    &:before {
      top: 3px;
    }

    &:after {
      top: 5px;
    }
  }
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';
