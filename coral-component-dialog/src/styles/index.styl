@require '@adobe/spectrum-css/dist/components/dialog/index.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/darkest.css';

._coral-Dialog--noBackdrop {
  border: 1px solid;
}

// @spectrum
._coral-Dialog-closeButton {
  line-height: 18px;
  position: absolute;
  top: 0;
  right: 0;
  width: 18px;
  height: 18px;

  ._coral-Icon {
    width: 12px;
  }
}

// @spectrum
coral-dialog-footer {
  display: block;

  &:empty {
    display: none;
  }
}

._coral-Dialog-dragIcon {
  margin-top: 3px;
}

// Prevent dialog flashing on page load
coral-dialog {
  display: none;
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';

