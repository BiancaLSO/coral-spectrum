@require '@adobe/spectrum-css/dist/components/dialog/index.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/dialog/multiStops/darkest.css';

@require '../../../coral-theme-spectrum/src/styles/vars.css';

// Prevent dialog flashing on page load
coral-dialog {
  display: none;
}

// @compat
._coral-Dialog--noBackdrop {
  border: var(--spectrum-medium-popover-border-size) solid;
}

// @compat
._coral-Dialog-closeButton {
  top: 8px;
  right: 8px;
}

// @compat
coral-dialog-footer {
  display: block;

  &:empty {
    display: none;
  }
}

// @compat
._coral-Dialog-wrapper {
  outline: none;
}

// Stay on top of dragZone
coral-dialog-header {
  z-index: 1;
}

._coral-Dialog-dragZone {
  position: absolute;
  width: calc(100% + calc(var(--spectrum-medium-dialog-padding) * 2));
  height: calc(100% + calc(var(--spectrum-medium-dialog-padding) - 16px));
  left: calc(-1 * var(--spectrum-medium-dialog-padding));
  top: calc(-1 * var(--spectrum-medium-dialog-padding));
}

// @spectrum
._coral-Dialog--dismissible ._coral-Dialog-closeButton {
  display: inline-flex;
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';

