@require '../../../coral-theme-spectrum/src/styles/vars.css';

// Remove overlay flashing while loading the page
coral-overlay {
  display: none;

  &[open] {
    display: block;
  }
}

._coral-Overlay {
  // @spectrum
  transition: opacity var(--spectrum-global-animation-duration-100) ease-in-out,
              visibility var(--spectrum-global-animation-duration-0) linear var(--spectrum-global-animation-duration-100);

  &:focus {
    // The overlay is focused when opened
    // We don't want to indicate this in most cases
    // The user can hit tab to focus on the first child of the shown overlay
    outline: none;
  }
}
