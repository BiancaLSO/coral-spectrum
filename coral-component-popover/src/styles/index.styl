@require '@adobe/spectrum-css/dist/components/popover/index.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/darkest.css';

// Prevent popover flashing on page load
coral-popover {
  display: none;
}

// @spectrum
coral-popover-footer {
  display: block;
}

coral-popover-separator {
  display: block;
}

._coral-Popover {
  // Increase min-width
  min-width: 150px;

  transition: opacity 130ms ease-in-out, visibility 0ms linear 130ms;
}

// @spectrum override for flyout popover variant
._coral-Popover:not(._coral-Popover--dialog) {
  ._coral-Dialog-content {
    padding: 0;
    margin: 0;
  }
}
