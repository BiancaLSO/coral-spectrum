$shell-orgswitcher-width = 250px;
$shell-orgswitcher-message-height = 200px
$shell-orgswitcher-background = white;
$shell-orgswitcher-height = 320px;

._coral-Shell-orgSwitcher {
  width: $shell-orgswitcher-width;
  padding: 24px;
  box-sizing: border-box;
}

._coral-Shell-orgSwitcher-items {
  max-height: $shell-orgswitcher-height;
  overflow-y: auto;
  padding: 3px 0;
}

._coral-Shell-orgSwitcher-item,
._coral-Shell-orgSwitcher-subitem {
  cursor: pointer;

  padding-right: 0;
  padding-left: 0;

  position: relative;

  &.is-selected {
    color: rgb(65, 120, 205);
  }
}

// todo
._coral-Shell-orgSwitcher-item.is-parent:hover {
  cursor: default !important;
  background: transparent !important;
}

coral-shell-organization._coral-Shell-orgSwitcher-item:last-child {
  padding-bottom: 0;
}

._coral-Shell-orgSwitcher-subitems {
  margin-left: 18px;
}

._coral-Shell-orgSwitcher-subitem {
  padding-left: 40px;

  // Don't overlap parent's icon
  background: none;

  coral-list-item-content {
    height: 1rem;
  }

  &:first-child {
    margin-top: 6px;
  }
}

._coral-Shell-orgSwitcher-search {
  width: calc(100% - 16px);
  margin-top: 4px;
  margin-left: 8px;

  input[is="coral-textfield"] {
    width: 100%;
  }
}

._coral-Shell-orgSwitcher-resultMessage {
  display: table;

  width: 100%;
  height: $shell-orgswitcher-message-height;

  background-color: $shell-orgswitcher-background;
}

._coral-Shell-orgSwitcher-resultMessage-container {
  display: table-cell;

  padding: 0 20px;

  vertical-align: middle;

  text-align: center;
}

._coral-Shell-orgSwitcher-checkmark {
  position: absolute;
  top: 10px;
  right: 12px;
}

coral-shell-orgswitcher-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4px;

  &:empty {
    display: none;
  }

  ._coral-Button + ._coral-Button {
    margin-left: 0;
    margin-top: 12px;
  }
}
