<?js var self = this; ?>
<dt>
    <?js if (kind == 'class') { ?><h2 class="line">Constructor</h2><?js } else { ?><h3 class="name" id="<?js= id ?>"><?js= obj.attribs + name + obj.signature ?></h3><?js } ?>
    
    <?js if (obj.summary) { ?>
    <p class="summary"><?js= summary ?></p>
    <?js } ?>
</dt>

<?js if (obj.description) { ?>
<div class="description">
    <?js= obj.description ?>
</div>
<?js } ?>

<dd>

    <?js if (kind === 'event' && obj.type && obj.type.names) {?>
        <h4>Type:</h4>
        <ul>
            <li>
                <?js= self.partial('type.tmpl', obj.type.names) ?>
            </li>
        </ul>
    <?js } ?>
    
    <?js if (obj['this']) { ?>
        <h4>This:</h4>
        <ul><li><?js= this.linkto(obj['this'], obj['this']) ?></li></ul>
    <?js } ?>
    
    <?js if (obj.params && params.length) { ?>
        <h4>Parameters:</h4>
        <?js= this.partial('params.tmpl', params) ?>
    <?js } ?>
    
    <?js if (obj.fires && fires.length) { ?>
    <h4>Fires:</h4>
    <ul><?js fires.forEach(function(f) { ?>
        <?js= self.partial('fires.tmpl', self.linkto(f) ) ?>
    <?js }); ?></ul>
    <?js } ?>
    
    <?js if (obj.exceptions && exceptions.length) { ?>
    <h4>Throws:</h4>
    <?js if (exceptions.length > 1) { ?><ul><?js
        exceptions.forEach(function(r) { ?>
            <li><?js= self.partial('exceptions.tmpl', r) ?></li>
        <?js });
    ?></ul><?js } else {
        exceptions.forEach(function(r) { ?>
            <?js= self.partial('exceptions.tmpl', r) ?>
        <?js });
    } } ?>
    
    <?js if (obj.returns && returns.length) { ?>
    <h4>Returns:</h4>
    <?js if (returns.length > 1) { ?><ul><?js
        returns.forEach(function(r) { ?>
            <li><?js= self.partial('returns.tmpl', r) ?></li>
        <?js });
    ?></ul><?js } else {
        returns.forEach(function(r) { ?>
            <?js= self.partial('returns.tmpl', r) ?>
        <?js });
    } } ?>
    
    <?js if (obj.examples && examples.length) { ?>
        <h4>Example<?js= examples.length > 1? 's':'' ?></h4>
        <?js= this.partial('examples.tmpl', examples) ?>
    <?js } ?>
    
    <?js= this.partial('details.tmpl', obj) ?>
</dd>
