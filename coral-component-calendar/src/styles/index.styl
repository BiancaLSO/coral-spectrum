@require '@adobe/spectrum-css/dist/components/calendar/index.css';
@require '@adobe/spectrum-css/dist/components/calendar/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/calendar/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/calendar/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/calendar/multiStops/darkest.css';

._coral-Calendar {
  max-height: 312px;
  // Prevent fast transition overflows
  overflow: hidden;

  // @spectrum increase specificity
  ._coral-Calendar-nextMonth,
  ._coral-Calendar-prevMonth {
    position: absolute;
  }
}

._coral-DatePicker-calendarSlidingContainer {
  display: block;
  position: relative;
  overflow: hidden;
}

._coral-Calendar-table--transit {
  position: absolute;
  top: 0;
  left: 0;
  transition: left 400ms;
}

._coral-Calendar-tableCell.is-outsideMonth {
  pointer-events: none;
  opacity: .2;
}

// @spectrum
._coral-Calendar-date.is-outsideMonth {
  visibility: visible;
}
