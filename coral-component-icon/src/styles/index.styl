@require '@adobe/spectrum-css/dist/components/icon/index.css';
@require '@adobe/spectrum-css/dist/components/icon/index-diff.css';

// @spectrum --ui-icon-large-display and --ui-icon-medium-display are undefined
@require '../../../coral-theme-spectrum/src/styles/vars.css';

// @spectrum
coral-icon._coral-Icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  // Clicking on icon is used in some components like Tree
  pointer-events: auto;
}

// Off screen because we can't hide it due to colored icons using radial gradients
._coral-Icon-collection {
  position: fixed;
  left: -999px;
  top: -999px;
}
