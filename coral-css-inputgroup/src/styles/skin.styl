.coral-InputGroup-button ._coral-Button {
  color: $inputgroup-button-color;
  background-color: $inputgroup-button-background-color;
  border-color: $inputgroup-button-border-color;

  &:hover {
    color: $inputgroup-button-color-hover;
    background-color: $inputgroup-button-background-color-hover;
    border-color: $inputgroup-button-border-color-hover;
    box-shadow: none;
  }

  &:active {
    color: $inputgroup-button-color-active;
    background-color: $inputgroup-button-background-color-active;
    border-color: $inputgroup-button-border-color-active;
    box-shadow: none;
  }
}
