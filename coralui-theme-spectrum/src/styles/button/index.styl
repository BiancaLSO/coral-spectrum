._coral-Button {
  // @spectrum: force text-align for anchorbuttons
  text-align: center;

  // Support text + icon buttons
  coral-icon + coral-button-label:not(:empty):not([hidden]),
  coral-icon + coral-anchorbutton-label:not(:empty):not([hidden]),
  coral-button-label:not(:empty):not([hidden]) + coral-icon,
  coral-anchorbutton-label:not(:empty):not([hidden]) + coral-icon {
    margin-left: 4*$px;
  }

// @spectrum: vertically align icon
  &:not(._coral-Button--icon) {
    coral-icon[size="XXS"] {
      margin-top: 2*$px;
    }

    coral-icon[size="S"] {
      margin-top: -4*$px;
    }

    coral-icon[size="M"] {
      margin-top: -6*$px;
    }
  }
}
