.coral3-Button {
  // Force text-align for anchorbuttons
  text-align: center;

  // Support text + icon buttons
  .coral3-Icon + coral-button-label:not(:empty):not([hidden]),
  .coral3-Icon + coral-anchorbutton-label:not(:empty):not([hidden]),
  coral-button-label:not(:empty):not([hidden]) + .coral3-Icon,
  coral-anchorbutton-label:not(:empty):not([hidden]) + .coral3-Icon {
    margin-left: 4*$px;
  }
}
