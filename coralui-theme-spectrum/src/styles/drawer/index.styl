.coral3-Drawer {
  display: block;
  position: relative;
  // Override coral-Well padding
  padding: 0;
}

.coral3-Drawer-toggle {
  position: absolute;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  width: 24*$px;
  height: 8*$px;
}

.coral3-Drawer-toggleButton {
  width: 100%;
  height: 100%;
  padding: 0;

  &:before,
  &:after  {
    content: '';
    height: 1*$px;
    position: absolute;
    top: 2*$px;
    left: 4*$px;
    right: 4*$px;
  }

  &:after {
    top: 4*$px;
  }
}

.coral3-Drawer-content {
  padding: 16*$px;
}

.coral3-Drawer-slider {
  overflow: hidden;
  transition: height ease 250ms;
}

.coral3-Drawer--down {
  .coral3-Drawer-toggle {
    bottom: -9 *$px;
  }

  .coral3-Drawer-toggleButton {
    border-top-left-radius: 0
    border-top-right-radius: 0;
  }
}

.coral3-Drawer--up {
  .coral3-Drawer-toggle {
    top: -9 *$px;
  }

  .coral3-Drawer-toggleButton {
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0;

    &:before {
      top: 3*$px;
    }

    &:after {
      top: 5*$px;
    }
  }
}

