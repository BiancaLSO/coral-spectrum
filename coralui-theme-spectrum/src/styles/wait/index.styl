.coral3-Loader--centered {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -16*$px;
  margin-top: -16*$px;

  &.coral3-Loader--small {
    margin-left: -8*$px;
    margin-top: -8*$px;
  }

  &.coral3-Loader--large,
  &.coral3-Loader--fullpage {
    margin-left: -32*$px;
    margin-top: -32*$px;
  }
}
