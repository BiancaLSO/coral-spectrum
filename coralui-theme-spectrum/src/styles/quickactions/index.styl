// prevents flash of un-styled content
coral-quickactions {
  display: none;
}

// items are hidden by default
coral-quickactions-item {
  display: none;
}

.coral3-QuickActions {
  position: absolute;
  display: block;
  // important: must match button outer height
  max-height: 38*$px;
  // prevents flash of un-styled content
  visibility: hidden;
  // removes focus around the QuickActions container
  outline: none;
}

.coral3-QuickActions-item {
  float: left;
  // required in layout collapse calculation
  min-width: 38*$px;
}

// @spectrum
a[is="coral-anchorbutton"].coral3-QuickActions-item {
  padding-top: 7*$px;
}

.coral3-QuickActions-overlay {
  width: 140*$px;
}

.coral3-QuickActions-buttonList {
  // constrains the size of the list to 6 items
  max-height: 6*40*$px;
  overflow-y: auto;
  // removes the outline in FF
  outline: none;
}
