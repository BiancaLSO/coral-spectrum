.coral3-BasicList,
.coral3-BasicList-item,
.coral3-SelectList-divider {
  display: block;
}

.coral3-BasicList-item {
  text-decoration: none;
  text-align: left;

  &.is-focused,
  &:focus {
    outline: none;
  }

  coral-icon {
    vertical-align: text-top;
  }
}

.coral3-BasicList-item-icon {
  float: left;

  margin-right: 12*$px;

  // Align icon correctly
  line-height: 38*$px;

  text-align: center;

  svg {
    vertical-align: baseline;
  }
}

.coral3-BasicList-item-outerContainer {
  overflow: hidden; // Don't go under the float

  height: 100%; // Truncate text when it's longer than 2 lines
}

.coral3-BasicList-item-contentContainer {
  display: table;
  table-layout: fixed; // Allow percent width
  width: 100%; // Required for text-overflow: ellipsis to apply on cells
}

.coral3-BasicList-item-content {
  display: table-cell;
  vertical-align: middle; // Center content

  max-width: 100%; // Enable text-overflow

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.coral3-ButtonList-item,
.coral3-AnchorList-item {
  // Avoid selection on interactive elements
  user-select: none;
}

.coral3-ButtonList-item {
  border: none;
  font-family: inherit;
  border-radius: inherit;
}

.coral3-SelectList-group:before {
  display: block;
  padding: 12*$px;
  padding-bottom: 0;

  font-weight: bold;
  text-transform: uppercase;
  content: attr(label);
}

// Spectrum CSS overrides
.coral3-SelectList-option {
  height: inherit;
}

// Spectrum CSS overrides
.coral3-SelectList .coral3-SelectList-option {
  &:not(.coral3-AnchorList-item):not(.coral3-ButtonList-item):not(.coral3-SelectList-item):hover {
    background-color: inherit;
    color: inherit;
    cursor: inherit;
  }
}
