// @compat
.coral-List-item + .coral-List-item {
  margin-top: 6*$px; // use em so font size is taken into account
}

// @compat
.coral-List {
  margin: 0;
}

// @compat
.coral-List--minimal {
  list-style: none;
  padding: 0;

  > .coral-List-item {
    padding: 0;
    margin: 0;
  }
}

// @compat
.coral-List--condensed {
  list-style: none;
  padding: 0;
  margin: 0;

  > .coral-List-item {
    display: inline-block;
    margin-right: 0.3rem;

    &:after {
      content: ",";
    }

    &:nth-last-of-type(1) {
      &:after {
        content: "";
      }
    }
  }
}

// @spectrum support text + icon
coral-selectlist-item-content {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;

  & > coral-icon:first-child {
    position: relative;
    top: 3*$px;
  }
}

._coral-BasicList,
._coral-BasicList-item,
._coral-SelectList-divider {
  display: block;
}

._coral-BasicList-item {
  text-decoration: none;
  text-align: left;
  // Allows line breaks
  height: auto;

  &.is-focused,
  &:focus {
    outline: none;
  }
}

._coral-BasicList-item-icon {
  float: left;

  margin-top: 6*$px;
  margin-right: 12*$px;

  // Hide if no icon
  &:empty {
    display: none;
  }
}

._coral-BasicList-item-outerContainer {
  overflow: hidden; // Don't go under the float

  height: 100%; // Truncate text when it's longer than 2 lines
}

._coral-BasicList-item-contentContainer {
  display: table;
  table-layout: fixed; // Allow percent width
  width: 100%; // Required for text-overflow: ellipsis to apply on cells
}

._coral-BasicList-item-content {
  display: table-cell;
  vertical-align: middle; // Center content

  max-width: 100%; // Enable text-overflow

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

._coral-ButtonList-item,
._coral-AnchorList-item {
  // Avoid selection on interactive elements
  user-select: none;
}

._coral-ButtonList-item {
  border: none;
  font-family: inherit;
  border-radius: 0;
}

._coral-SelectList-group:before {
  display: block;
  padding: 12*$px;
  padding-bottom: 0;

  font-weight: bold;
  text-transform: uppercase;
  content: attr(label);
}

// @spectrum
._coral-SelectList-option {
  height: inherit;
}

// @spectrum
._coral-SelectList ._coral-SelectList-option {
  &:not(._coral-AnchorList-item):not(._coral-ButtonList-item):not(._coral-SelectList-item):hover {
    background-color: inherit;
    color: inherit;
    cursor: inherit;
  }
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';
