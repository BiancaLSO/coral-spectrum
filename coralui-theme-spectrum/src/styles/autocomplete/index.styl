.coral3-Autocomplete {
  position: relative;
  display: inline-block;
}

.coral3-Autocomplete-overlay {
  width: 226*$px;
}

// Data-only component, targeted with tagName as it doesn't get a CSS class
coral-autocomplete-item {
  display: none;
}

.coral3-Autocomplete-tagList {
  display: block;
  margin-top: 7*$px;
}

.coral3-Autocomplete-loading {
  position: relative;
  height: 42*$px;
}

.coral-Form--vertical .coral-Form-field.coral3-Autocomplete {
  display: block;
  width: 100%;
}

