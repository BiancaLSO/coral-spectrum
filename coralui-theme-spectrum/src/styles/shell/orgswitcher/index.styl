$shell-orgswitcher-width = 300*$px;
$shell-orgswitcher-message-height = 200*$px
$shell-orgswitcher-background = white;
$shell-orgswitcher-height = 320*$px;

.coral3-Shell-orgSwitcher {
  width: $shell-orgswitcher-width;
  padding: 0;
}

.coral3-Shell-orgSwitcher-items {
  max-height: $shell-orgswitcher-height;
  overflow-y: auto;
  padding: 3*$px 0;
}

.coral3-Shell-orgSwitcher-item,
.coral3-Shell-orgSwitcher-subitem {
  cursor: pointer;

  padding-right: 0;
  padding-left: 0;

  position: relative;

  &.is-selected {
    color: rgb(65, 120, 205);
  }
}

.coral3-Shell-orgSwitcher-item {
  padding-left: 10*$px;

  &.is-parent:hover {
    cursor: default;
    background: transparent;
  }
}

.coral3-Shell-orgSwitcher-subitems {
  // Compensate padding
  margin-left: -10*$px;
}

.coral3-Shell-orgSwitcher-subitem {
  padding-left: 40*$px;

  // Don't overlap parent's icon
  background: none;

  coral-list-item-content {
    height: 1rem;
  }
}

.coral3-Shell-orgSwitcher-search {
  width: 100%;

  input[is="coral-textfield"] {
    width: 100%;
    border-top: 0;
    border-left: 0;
    border-right: 0;
    border-radius: 0;
  }
}

.coral3-Shell-orgSwitcher-resultMessage {
  display: table;

  width: 100%;
  height: $shell-orgswitcher-message-height;

  background-color: $shell-orgswitcher-background;
}

.coral3-Shell-orgSwitcher-resultMessage-container {
  display: table-cell;

  padding: 0 20*$px;

  vertical-align: middle;

  text-align: center;
}

coral-shell-orgswitcher-footer {
  display: block;

  border-top: 1*$px solid rgb(235, 235, 235);

  text-align: center;

  button[is='coral-button'],
  a[is='coral-anchorbutton'] {
    // Force block
    width: 100%;

    border-radius: 0;
  }
}
