// hidden by default
coral-cyclebutton-item,
coral-cyclebutton-action {
  display: none;
}

.coral3-CycleSelect {
  box-sizing: border-box;

  display: inline-block;
  cursor: pointer;
}

.coral3-CycleSelect-overlay {
  width: 140*$px;
}

.coral3-CycleSelect-icon {
  display: none;
  float: right;
  position: relative;
  top: 12*$px;

  width: 10*$px;
  height: 6*$px;

  margin-left: 12*$px;
}

.coral3-CycleSelect--extended .coral3-CycleSelect-icon {
  display: inline-block;
}

.coral3-CycleSelect-list-icon {
  margin-right: 12*$px;
}

// @spectrum
.coral3-CycleSelect-button coral-icon {
  overflow: visible !important;
}
