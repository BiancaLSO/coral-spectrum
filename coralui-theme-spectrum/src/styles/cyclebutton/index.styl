// hidden by default
coral-cyclebutton-item,
coral-cyclebutton-action {
  display: none;
}

._coral-CycleSelect {
  box-sizing: border-box;

  display: inline-block;
  cursor: pointer;
}

// Expand list width based on content
._coral-CycleSelect-buttonList {
  ._coral-BasicList-item-contentContainer {
    width: auto;
  }

  button[is="coral-buttonlist-item"] {
    width: 100%;
  }
}

._coral-CycleSelect-icon {
  display: none;
  order: 1;

  width: 10*$px;
  height: 6*$px;

  margin-left: 12*$px;
}

._coral-CycleSelect--extended ._coral-CycleSelect-icon {
  display: inline-block;
}
