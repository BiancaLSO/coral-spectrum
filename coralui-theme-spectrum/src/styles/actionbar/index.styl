$actionbar-height = 44*$px;
$actionbar-item-height = 38*$px;
$actionbar-padding = ($actionbar-height - $actionbar-item-height) / 2;
$actionbar-container-padding-left = 15*$px;
$actionbar-container-padding-right = 15*$px;

._coral-ActionBar {
  display: block;
  box-sizing: border-box;

  position: relative;

  height: $actionbar-height;
  // padding is added overall to avoid the focus to overflow outside the component
  padding: $actionbar-padding 0;
}

._coral-ActionBar-primary,
._coral-ActionBar-secondary {
  position absolute;

  > ._coral-ActionBar-item,
  > ._coral-Button[coral-actionbar-more] {
    display: block;
    float: left;
    // required to get the focused item to go to the foreground
    position: relative;
    margin-left: 5*$px;
  }

  > [coral-actionbar-offscreen] {
    // important to make Coral.commons.addResizeListener work with actionbar
    position: absolute !important;
    left: -999em;
  }
}

._coral-ActionBar-primary {
  left: $actionbar-container-padding-left;
}

._coral-ActionBar-secondary {
  right: $actionbar-container-padding-right;
}

// Expand list width based on content
._coral-ActionBar-buttonList {
  ._coral-BasicList-item-contentContainer {
    width: auto;
  }

  button[is="coral-buttonlist-item"] {
    display: flex;
    width: 100%;
  }
}
