.coral3-Tree-item {
  .coral3-Tree-header {
    &:hover,
    &:focus {
      background-color: $tree-background-color-hover;
    }
  }

  &.is-selected > .coral3-Tree-header {
    background-color: $tree-background-color-selected;

    &:hover {
      background-color: $tree-background-color-selected-hover;
    }
  }

  &.is-disabled {
    .coral3-Tree-header,
    .coral3-Tree-header:hover,
    .coral3-Tree-header:focus {
      color: $tree-color-disabled;
      background-color: transparent;
    }
  }
}
