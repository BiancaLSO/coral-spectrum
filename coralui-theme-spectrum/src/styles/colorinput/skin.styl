$colorinput-swatch-button-icon-color = white;
$colorinput-button-icon-color = rgba(0, 0, 0, .4);
$colorinput-button-hover-background-color = rgba(255, 255, 255, 0.1);

.coral3-ColorInput coral-popover {
  .coral3-ColorInput-propertiesSubview {
    border-right-color: $colorinput-propertiessubview-border;
  }

  .coral3-ColorInput-swatch {
    &[selected] button {
      coral-icon {
        color: $colorinput-swatch-button-icon-color;
      }

      &.coral3-ColorInput-swatch-novalue {
        coral-icon {
          color: $colorinput-button-icon-color;
        }
      }
    }
  }
}

.coral3-ColorInput-preview {
  &:disabled, &[disabled] {
    background-color: transparent;
  }
}

.coral3-ColorInput--novalue .coral3-ColorInput-preview {
  &:disabled, &[disabled] {
    background-image: svgImport($colorinput-blank-url);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
    background-color: white;
  }
}

.coral3-ColorInput-swatch button,
.coral3-ColorInput-preview:not([disabled]) {
  border-color: $colorinput-button-border-color;

  &:hover {
    border-color: $colorinput-button-border-color;

    &:after {
      background-color: $colorinput-button-hover-background-color;
    }
  }
}

.coral3-ColorInput-swatch-novalue:hover {
  background-color: transparent;
}

.coral3-ColorInput-preview[disabled] > coral-icon {
  color: $colorinput-button-icon-color;
}
