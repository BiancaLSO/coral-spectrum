.coral--light,
.coral--dark,
.coral--lightest,
.coral--darkest {
  // Support quiet
  ._coral-TagList-item--quiet,
  ._coral-TagList-item--quiet:hover {
    border-color: transparent;
    background-color: transparent;
  }

  ._coral-TagList-item--quiet.focus-ring {
    background-color: transparent;
  }
}

// Support multiline
._coral-TagList-item--multiline {
  height: auto;

  ._coral-TagList-item-label {
    white-space: inherit;
    text-overflow: inherit;
  }
}

