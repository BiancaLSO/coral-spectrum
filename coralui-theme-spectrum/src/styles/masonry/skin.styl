$masonry-selected-background-color = rgba(20, 115, 230, 0.4);
$masonry-selected-hover-background-color = rgba(20, 115, 230, 0.5);

.coral3-Masonry-item.is-selected:after {
  background-image: svgImport($masonry-selected-icon-url, 'path {fill: white}');
  background-color: $masonry-selected-background-color;
}

.coral3-Masonry-item.is-selected:hover:after {
  background-color: $masonry-selected-hover-background-color;
}

.coral3-Masonry.is-selectable .coral3-Masonry-item:not([selected]) {
  &:hover,
  &:focus {
    &:after {
      background-image: svgImport($masonry-selected-icon-url, 'path {fill: white}');
      background-color: $masonry-hover-background-color;
    }
  }
}
