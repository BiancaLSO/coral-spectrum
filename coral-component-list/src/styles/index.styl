@require '@adobe/spectrum-css/dist/components/menu/index.css';
@require '@adobe/spectrum-css/dist/components/menu/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/menu/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/menu/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/menu/multiStops/darkest.css';

// @compat
.coral-List-item + .coral-List-item {
  margin-top: 6px;
}

// @compat
.coral-List {
  margin: 0;
}

// @compat
.coral-List--minimal {
  list-style: none;
  padding: 0;

  > .coral-List-item {
    padding: 0;
    margin: 0;
  }
}

// @compat
.coral-List--condensed {
  list-style: none;
  padding: 0;
  margin: 0;

  > .coral-List-item {
    display: inline-block;
    margin-right: 4px;

    &:after {
      content: ",";
    }

    &:nth-last-of-type(1) {
      &:after {
        content: "";
      }
    }
  }
}

// @compat
._coral-Menu {
  display: block;
}

._coral-ButtonList-item {
  text-align: left;
  width: 100%;
  border-top: 0;
  border-bottom: 0;
  border-right: 0;
}

._coral-AnchorList-item {
  text-decoration: none;
}

._coral-Menu-divider {
  display: list-item;
}

// @compat
._coral-SelectList-group:before {
  display: block;
  margin: 6px 0 0 0;
  padding: 0 36px 0 12px;
  font-size: 11px;
  font-weight: 400;
  line-height: 20px;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  content: attr(label);
}

._coral-SelectList-loading {
  position: relative;
  height: 32px;
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';
