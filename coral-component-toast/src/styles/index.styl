@require '@adobe/spectrum-css/dist/components/toast/index.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/darkest.css';

@require '../../../coral-theme-spectrum/src/styles/vars.css';

// FOUC
coral-toast {
  display: none;
}

._coral-Toast {
  position: fixed;
  margin-left: var(--spectrum-medium-toast-margin-x);
  margin-right: var(--spectrum-medium-toast-margin-x);
  bottom: 0;

  visibility: hidden;
  opacity: 0;
  transform: translate3d(0, 0, 0);
  transition: transform var(--spectrum-global-animation-duration-100) ease-in-out,
    opacity var(--spectrum-global-animation-duration-100) ease-in-out,
    visibility var(--spectrum-global-animation-duration-0) linear var(--spectrum-global-animation-duration-100);

  pointer-events: none;

  &.is-open {
    visibility: visible;
    opacity: 1;
    transition-delay: var(--spectrum-global-animation-duration-0);
    transform: translate3d(0, -var(--spectrum-medium-toast-offset-y), 0);

    pointer-events: auto;
  }

  // IE
  ._coral-UIIcon-CrossMedium svg {
    flex-shrink: 1;
  }
}
