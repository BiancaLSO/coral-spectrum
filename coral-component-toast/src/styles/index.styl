@require '@adobe/spectrum-css/dist/components/toast/index.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/toast/multiStops/darkest.css';

// FOUC
coral-toast {
  display: none;
}

._coral-Toast {
  position: fixed;
  margin-left: 8px;
  margin-right: 8px;
  bottom: 0;

  visibility: hidden;
  opacity: 0;
  transform: translate3d(0, 0, 0);
  transition: transform 130ms ease-in-out,
    opacity 130ms ease-in-out,
    visibility 0ms linear 130ms;

  pointer-events: none;

  &.is-open {
    visibility: visible;
    opacity: 1;
    transition-delay: 0ms;
    transform: translate3d(0, -16px, 0);

    pointer-events: auto;
  }

  // IE
  ._coral-UIIcon-CrossMedium svg {
    flex-shrink: 1;
  }
}
