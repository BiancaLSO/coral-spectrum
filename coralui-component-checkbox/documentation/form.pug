+document-section('Forms')
  +document-subsection('Vertical Layout')
    +markup-example().
      <form class="coral-Form coral-Form--vertical">
        <section class="coral-Form-fieldset">

          <div class="coral-Form-fieldwrapper coral-Form-fieldwrapper--singleline">
            <label class="coral-Form-fieldlabel" id="label-vertical-checkbox-0">Label</label>
            <coral-checkbox class="coral-Form-field" name="name" value="checkboxValue" labelledby="label-vertical-checkbox-0">Checkbox One</coral-checkbox>
          </div>

          <div class="coral-Form-fieldwrapper coral-Form-fieldwrapper--singleline">
            <label class="coral-Form-fieldlabel" id="label-vertical-checkbox-1">Required</label>
            <coral-checkbox class="coral-Form-field" name="name" value="checkboxValue" labelledby="label-vertical-checkbox-1">Checkbox Two</coral-checkbox>
            <coral-icon class="coral-Form-fieldinfo" icon="infoCircle" size="S" id="coral-form-vertical-checkbox-fieldinfo"></coral-icon>
            <coral-tooltip variant="info" placement="right" target="#coral-form-vertical-checkbox-fieldinfo">Required Information</coral-tooltip>
          </div>

        </section>
      </form>

