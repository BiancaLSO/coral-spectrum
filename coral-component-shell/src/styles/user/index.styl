$user-name-color = rgb(75, 75, 75);
$user-heading-color = rgb(142, 142, 142);
$user-separator-color = rgb(234, 234, 234);

._coral-Shell-user {
  display: block;
  padding: 24px;
}

._coral-Shell-user-container {
  border-bottom: 2px solid $user-separator-color;
}

._coral-Shell-user-image {
  height: 64px;
  width: 64px;
  overflow: hidden;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;

  ._coral-Icon {
    display: block;
    height: 100%;
    width: 100%;
    border-radius: 100%;
    object-fit: cover;
  }
}

coral-shell-user-name {
  display: block;
  text-align: center;
  font-weight: 100;
  font-size: 28px;
  margin: 16px 0 8px;
  color: $user-name-color;
}

coral-shell-user-heading {
  display: block;
  text-align: center;
  font-size: 14px;
  color: $user-heading-color;
  padding-bottom: 16px;
}

coral-shell-user-subheading {
  padding: 16px 0;
  display: flex;
  flex-direction: column;
  align-items: center;

  &:empty {
    display: none;
  }
}

coral-shell-user-content {
  padding: 16px 0;
  display: block;

  &:empty {
    display: none;
  }
}

coral-shell-user-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

coral-shell-user-subheading,
coral-shell-user-footer {
  ._coral-Button + ._coral-Button {
    margin-left: 0;
    margin-top: 12px;
  }
}
