/* Note: $shell-header-height is defined in styles/coral-component-shell */

$shell-header-padding-left = 8px;
$shell-header-padding-right = 2px;
$shell-header-area = 45px;

$shell-header-background-color = rgb(30, 30, 30);

$shell-header-background-disabled-color = rgb(62, 62, 62);

$shell-homeanchor-margin-right = 64px;
$shell-homeanchor-icon-margin-right = 10px;
$shell-homeanchor-icon-margin-top = -3px;

$shell-homeanchor-text-size = 14px;
$shell-homeanchor-color = rgba(255, 255, 255, 0.80);
$shell-homeanchor-hover-color = white;
$shell-homeanchor-focus-color = white;

._coral-Shell-header {
  display: block;
  box-sizing: border-box;

  position: relative;

  height: $shell-header-height;

  // padding-bottom 0 allows items to stick to the bottom without guessing the size of the padding
  padding: 0 $shell-header-padding-right 0 $shell-header-padding-left;

  background-color: $shell-header-background-color;

  // Customize minimal button's badge colors to match the dark background
  ._coral-Shell-menu-button[badge] {
    &:after {
    // Match ultradark background color
      border-color: $shell-header-background-color;
    }

    &:disabled,
    &.is-disabled {
      &:after {
        background-color: $shell-header-background-disabled-color;

        color: $shell-header-background-color;
      }
    }
  }

  ._coral-Shell-menu-button[badge="0"]:after {
    display: none;
  }
}

coral-shell-header-home {
  display: flex;
  align-items: center;
  height: 100%;
  float: left;

  @media (min-width: 768px) {
    margin-right: $shell-homeanchor-margin-right;
  }
}

coral-shell-header-actions {
  display: flex;
  align-items: center;
  height: 100%;
  float: right;
  margin-left: 15px;
}

// Greedy container that takes the available space
coral-shell-header-content {
  // Fill vertically, leaving space at the bottom
  height: $shell-header-area;
  display: inline-block;

  vertical-align: top;
}

// makes the class more specific to be able to verride button styles
._coral-Shell-homeAnchor {
  // Fill the whole header
  display: block;
  box-sizing: border-box;
  vertical-align: top;

  transition: color .15s ease-out;

  margin: 0;
  padding: 0 8px;

  text-decoration: none;
  text-align: center;

  line-height: 38px;

  color: $shell-homeanchor-color;

  cursor: pointer;
  white-space: nowrap;

  &:not(:disabled):not(.is-disabled) {
    &.is-selected,
    &:active,
    &:hover {
      color: $shell-homeanchor-hover-color;
    }

    // focus overrides hover/selected
    &:focus,
    &.is-focused {
      color: $shell-homeanchor-focus-color;
      outline: none;
    }

    // active overrides focus
    &:active {
    // Repeated to override focus
      color: $shell-homeanchor-hover-color;
    }
  }
}

._coral-Shell-homeAnchor-icon {
  vertical-align: middle;
  margin-top: $shell-homeanchor-icon-margin-top;
  margin-right: $shell-homeanchor-icon-margin-right;
}

coral-shell-homeanchor-label {
  display: inline-block;

  @media (max-width: 766px) {
    display: none;
  }
}
