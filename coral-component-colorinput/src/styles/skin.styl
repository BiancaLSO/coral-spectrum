$colorinput-swatch-button-icon-color = white;
$colorinput-button-icon-color = rgba(0, 0, 0, .4);
$colorinput-button-hover-background-color = rgba(255, 255, 255, 0.1);

._coral-ColorInput-propertiesSubview {
  border-right-color: $colorinput-propertiessubview-border;
}

._coral-ColorInput-swatch {
  &[selected] button {
    ._coral-Icon {
      color: $colorinput-swatch-button-icon-color;
    }

    &._coral-ColorInput-swatch-novalue {
      ._coral-Icon {
        color: $colorinput-button-icon-color;
      }
    }
  }
}

._coral-ColorInput-preview {
  &:disabled, &[disabled] {
    background-color: transparent;
  }
}

._coral-ColorInput--novalue ._coral-ColorInput-preview {
  &:disabled, &[disabled] {
    background-image: svgImport($colorinput-blank-url);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
    background-color: white;
  }
}

._coral-ColorInput-swatch button,
._coral-ColorInput-preview:not([disabled]) {
  border-color: $colorinput-button-border-color;

  &:hover {
    border-color: $colorinput-button-border-color;

    &:after {
      background-color: $colorinput-button-hover-background-color;
    }
  }
}

._coral-ColorInput-swatch-novalue:hover {
  background-color: transparent;
}

._coral-ColorInput-preview[disabled] > ._coral-Icon {
  color: $colorinput-button-icon-color;
}
