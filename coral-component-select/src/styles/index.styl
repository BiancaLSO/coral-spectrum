@require '@adobe/spectrum-css/dist/components/dropdown/index.css';
@require '@adobe/spectrum-css/dist/components/dropdown/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/dropdown/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/dropdown/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/dropdown/multiStops/darkest.css';

coral-select-item {
  display: none;
}

._coral-Dropdown {
  ._coral-Dropdown-tagList {
    display: none;
  }

  ._coral-Dropdown-select {
    position: absolute;
    top: 0;
    left: 0;

    display: none;

    width: 100%;
    height: 32px;

    // allows the size to match the size of the button
    -webkit-appearance: none;
    -moz-appearance: none;
  }

  ._coral-Dropdown-trigger {
    ._coral-Dropdown-label > coral-icon:first-child {
      vertical-align: text-top;
      margin-right: 4px;
      margin-top: 0;
      margin-bottom: 0;
    }
  }

  ._coral-Dropdown-invalidIcon {
    margin-left: 4px;
  }
}

._coral-Dropdown--native {
  ._coral-Dropdown-select {
    display: block;
    opacity: 0.01;
  }
}
